<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/LogInLayout"
    android:paddingHorizontal="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/LogInParent"
            android:visibility="invisible"
            android:orientation="vertical">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/LogInLogo"
            />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/input"
                android:hint="@string/user_hint"
                android:textColorHint="#6D717A"
                android:inputType="textEmailAddress"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="26dp"
                android:id="@+id/LogInUserInput"
            />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/input"
                android:hint="@string/password_hint"
                android:textColorHint="#6D717A"
                android:inputType="textPassword"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginBottom="26dp"
                android:id="@+id/LogInPasswordInput"
            />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button"
                android:textColor="@color/white"
                android:text="@string/login_enter_button"
                android:id="@+id/LogInEnterButton"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="@string/login_invalid_credentials"
                android:background="@drawable/error_background"
                android:paddingHorizontal="10dp"
                android:textColor="@color/errorText"
                android:layout_marginTop="64dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="12sp"
                android:id="@+id/LogInInvalidCredentialsText"
                android:visibility="gone"
            />

        </LinearLayout>

        <ImageView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:visibility="gone"
            android:id="@+id/LogInLogoCenter"
        />

    </FrameLayout>

    

</LinearLayout>